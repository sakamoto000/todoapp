<div class="container">
  <div class="title">
    <div class="article_title">
      <%= @article.title %>
    </div>
    <div class="article_detail_actions">
      <div class="dropdown">
        <%= image_tag 'Combined Shape.png', class: 'dropbtn' %>
        <div class="dropdown-content mini">
          <%= link_to '編集する', edit_article_path(@article) %>
          <%= link_to '削除する', article_path(@article), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' } %>
        </div>
      </div>
    </div>
  </div>
  <div class="article_eyecatch">
  </div>
  <div class="content_box">
    <div class="content">
      <%= @article.content %>
    </div>
  </div>
  <div class="comment">
    <div class="comment_title">Comment</div>
      <div class="comment_user_icon">
      <div class="comment_user_content">
      </div>
      </div>
  </div>
</div>1

